<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.bodyboost">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BodyBoost"
        tools:targetApi="31">

        <activity
            android:name="com.example.bodyboost.StatActivity"
            android:exported="true" />
        <activity
            android:name="com.example.bodyboost.NightActivity"
            android:exported="true" />

        <activity android:name="com.example.bodyboost.ReminderActivity" />

        <activity
            android:name="com.example.bodyboost.ProfileActivity"
            android:exported="false" />
        <activity
            android:name="com.example.bodyboost.FitActivity"
            android:exported="false" />
        <activity
            android:name="com.example.bodyboost.SleepActivity"
            android:exported="false" />
        <activity
            android:name="com.example.bodyboost.FoodActivity"
            android:exported="false" />
        <activity
            android:name="com.example.bodyboost.MedicineActivity"
            android:exported="false" />
        <activity
            android:name="com.example.bodyboost.WaterActivity"
            android:exported="false" />
        <activity
            android:name="com.example.bodyboost.RegisterActivity"
            android:exported="false" />
        <activity
            android:name="com.example.bodyboost.LoginActivity"
            android:exported="false" />
        <activity
            android:name="com.example.bodyboost.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>